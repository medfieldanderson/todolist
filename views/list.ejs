<%- include("header") -%>
<nav class="navbar">
  <a class="navbar-item home" href="/">Today</a>
  <div class="dropdown">
    <button class="dropdown-button" type="button">â˜°</button>
    <div class="dropdown-content">
      <% menuItems.forEach((item) => { %>
      <a class="navbar-item" href="/<%= item.name %>"><%= item.name %></a>
      <% }); %>
    </div>
  </div>
</nav>
<div>
  <div class="errors">
    <ul class="error-list">
      <% errors.forEach((msg) => { %>
      <li class="error-item"><%= msg %></li>
       <% }) %>
    </ul>
  </div>
  <div class="box" id="heading">
    <h1><%= listTitle %></h1>
  </div>

  <div class="box">
    <% newListItems.forEach(function(item) { %>
    <form action="/delete" method="post">
      <div class="item">
        <input
          type="checkbox"
          name="checkbox"
          value="<%= item._id %>"
          onChange="this.form.submit()"
        />
        <p><%= item.name %></p>
      </div>
      <input type="hidden" name="listName" value="<%= listTitle %>" />
    </form>
    <% }) %>
    <form class="item" action="/" method="post">
      <input
        type="text"
        name="newItem"
        placeholder="New Item"
        autocomplete="off"
        autofocus
      />
      <button
        class="add-button"
        type="submit"
        name="list"
        value="<%= listTitle %>"
      >
        +
      </button>
    </form>
  </div>
</div>

<%- include("footer") -%>
